# 测试用背景布局
<TestBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: app.test_color
        Rectangle:
            pos: self.pos
            size: self.size

# 次要背景布局
<PartBoxLayout@BoxLayout>
    canvas.before:
        Color:
            rgba: app.part_color
        Rectangle:
            pos: self.pos
            size: self.size

# 主要背景布局
<MainBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: app.main_color
        Rectangle:
            pos: self.pos
            size: self.size

# 颜色边框布局
<BorderBoxLayout@BoxLayout>:
    padding: dp(5)
    canvas.before:
        Color:
            rgba: app.part_color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: app.main_color
        Rectangle:
            pos: self.x+dp(5), self.y+dp(5)
            size: self.width-dp(10), self.height-dp(10)

<LineBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: app.main_color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: app.part_color
        Rectangle:
            pos: self.x, self.y
            size: self.width, dp(2)
    size_hint_y: None
    height: dp(32)
    orientation: 'horizontal'
    padding: (0,0,2,0)