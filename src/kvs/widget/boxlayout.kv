<ColorBoxLayout>:
    canvas.before:
        Color:
            rgba: self.canvas_color
        Rectangle:
            pos: self.pos
            size: self.size

# 颜色边框布局
<BorderBoxLayout>:
    padding: dp(5)
    canvas.before:
        Color:
            rgba: self.canvas_color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: self.line_color
        Rectangle:
            pos: self.x+dp(5), self.y+dp(5)
            size: self.width-dp(10), self.height-dp(10)

<LineBoxLayout>:
    canvas.before:
        Color:
            rgba: self.canvas_color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: self.line_color
        Rectangle:
            pos: self.x, self.y
            size: self.width, dp(2)
    size_hint_y: None
    height: dp(32)
    orientation: 'horizontal'
    padding: (0,0,2,0)