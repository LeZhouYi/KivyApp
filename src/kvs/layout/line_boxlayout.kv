# 带下行线布局
<LineBoxLayout>:
    canvas.before:
        Color:
            rgba: self.canvas_color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: self.line_color
        Rectangle:
            pos: self.x, self.y
            size: self.width, dp(2)
    size_hint_y: None
    height: dp(32)
    orientation: 'horizontal'
    padding: (0,0,2,0)