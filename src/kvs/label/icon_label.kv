# 只显示图标的Label
<IconLabel>:
    id: icon_label
    width: dp(30)
    size_hint_x: None
    canvas.before:
        Color:
            rgba: self.canvas_color
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source: root.icon_source
        pos: icon_label.x + dp(5), icon_label.y + dp(5)
        size: icon_label.width-dp(10), icon_label.height-dp(10)