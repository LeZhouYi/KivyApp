# 设置弹窗
<SkinSettingPopup>
    size_hint: 0.8, 0.8
    title: ''
    overlay_color: (0,0,0,0.2)
    GreenBoxLayout:
        padding: dp(5)
        WhiteBoxLayout:
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                #滚动页面布局
                WhiteBoxLayout:
                    size_hint: 1,None
                    orientation: 'vertical'
                    spacing: dp(8)
                    padding: dp(8)
                    height: self.minimum_height
                    # 皮肤库路径栏
                    GreenBoxLayout:
                        size_hint_y: None
                        height: dp(32)
                        WhiteBoxLayout:
                            pos_hint: {'top': 1}
                            orientation: 'horizontal'
                            height: dp(30)
                            size_hint_y: None

                            # 皮肤库路径文件图标
                            Button:
                                id: skin_list_button
                                width: dp(30)
                                size_hint_x: None
                                background_normal: 'src/textures/white_icon.png'
                                background_down: 'src/textures/down_icon.png'
                                Image:
                                    source: 'src/textures/menu_icon.png'
                                    pos: skin_list_button.x + dp(5), skin_list_button.y + dp(5)
                                    size: skin_list_button.width-dp(10), skin_list_button.height-dp(10)
                            # 皮肤库路径文本
                            Label:
                                text: 'Skin List'
                                text_size: self.size
                                valign: 'middle'
                                color: 80/255,104/255,82/255,1


# 皮肤管理页面布局
<SkinManageLayout>:
    orientation: 'vertical'
    padding: dp(5)
    spacing: dp(5)

    # 标题栏
    WhiteBoxLayout:
        orientation: 'horizontal'
        height: dp(30)
        size_hint_y: None

        # 侧边栏菜单按钮
        Button:
            id: skin_menu
            width: dp(30)
            size_hint_x: None
            background_normal: 'src/textures/white_icon.png'
            background_down: 'src/textures/down_icon.png'
            Image:
                source: 'src/textures/menu_icon.png'
                pos: skin_menu.x + dp(5), skin_menu.y + dp(5)
                size: skin_menu.width-dp(10), skin_menu.height-dp(10)
        # 标题
        Label:
            text: 'Skin List'
            text_size: self.size
            valign: 'middle'
            color: 80/255,104/255,82/255,1
        # 设置按钮
        Button:
            id: skin_settings
            width: dp(30)
            size_hint_x: None
            background_normal: 'src/textures/white_icon.png'
            background_down: 'src/textures/down_icon.png'
            Image:
                source: 'src/textures/settings_icon.png'
                pos: skin_settings.x + dp(5), skin_settings.y + dp(5)
                size: skin_settings.width-dp(10), skin_settings.height-dp(10)
    # 内容布局
    GreenBoxLayout:
        orientation: 'horizontal'
        spacing: dp(5)
        # 状态栏
        WhiteBoxLayout:
            width: dp(160)
            size_hint_x: None
