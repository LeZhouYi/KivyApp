# 设置模窗
<SkinSettingModalView>
    size_hint: 0.8, 0.8
    title: ''
    overlay_color: (0,0,0,0.2)
    GreenBorderLayout
        VerticalScrollView:
            #滚动页面布局
            WhiteBoxLayout:
                size_hint: 1,None
                orientation: 'vertical'
                spacing: dp(8)
                padding: dp(8)
                height: self.minimum_height
                # 皮肤库路径栏
                GreenLineLayout:
                    WhiteBoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, None
                        height: dp(30)
                        pos_hint: {'top': 1}
                        # 皮肤库路径文件图标
                        IconButton:
                            id: skin_list_button
                            width: dp(30)
                            size_hint_x: None
                            Image:
                                source: 'src/textures/folder_icon.png'
                                pos: skin_list_button.x + dp(5), skin_list_button.y + dp(5)
                                size: skin_list_button.width-dp(10), skin_list_button.height-dp(10)
                        # 皮肤库路径文本
                        DoubleClickLabel:
                            id: skin_list_path_label
                            text: 'Skin List'
                            text_size: self.size
                            valign: 'middle'
                            color: 80/255,104/255,82/255,1
                        IconButton:
                            id: skin_list_set_button
                            text: "Select Skin List Folder"
                            color: (0,0,0,0.3)
                            width: dp(150)
                            size_hint_x: None
                        IconButton:
                            id: skin_list_arrow_button
                            width: dp(30)
                            size_hint_x: None
                            Image:
                                source: 'src/textures/arrow_right_icon.png'
                                pos: skin_list_arrow_button.x + dp(5), skin_list_arrow_button.y + dp(5)
                                size: skin_list_arrow_button.width-dp(10), skin_list_arrow_button.height-dp(10)

# 皮肤管理页面布局
<SkinManageLayout>:
    orientation: 'vertical'
    padding: dp(5)
    spacing: dp(5)

    # 标题栏
    WhiteBoxLayout:
        orientation: 'horizontal'
        height: dp(30)
        size_hint_y: None

        # 侧边栏菜单按钮
        Button:
            id: skin_menu_button
            width: dp(30)
            size_hint_x: None
            background_normal: 'src/textures/white_icon.png'
            background_down: 'src/textures/down_icon.png'
            Image:
                source: 'src/textures/menu_icon.png'
                pos: skin_menu_button.x + dp(5), skin_menu_button.y + dp(5)
                size: skin_menu_button.width-dp(10), skin_menu_button.height-dp(10)
        # 标题
        Label:
            text: 'Skin List'
            text_size: self.size
            valign: 'middle'
            color: 80/255,104/255,82/255,1
        # 设置按钮
        Button:
            id: skin_setting_button
            width: dp(30)
            size_hint_x: None
            background_normal: 'src/textures/white_icon.png'
            background_down: 'src/textures/down_icon.png'
            Image:
                source: 'src/textures/settings_icon.png'
                pos: skin_setting_button.x + dp(5), skin_setting_button.y + dp(5)
                size: skin_setting_button.width-dp(10), skin_setting_button.height-dp(10)
    # 内容布局
    GreenBoxLayout:
        orientation: 'horizontal'
        spacing: dp(5)
        # 状态栏
        WhiteBoxLayout:
            width: dp(160)
            size_hint_x: None
