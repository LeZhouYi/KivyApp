# 皮肤管理页面布局
<SkinManageLayout>:
    PartBoxLayout:
        orientation: 'vertical'
        padding: dp(5)
        spacing: dp(5)
        # 标题栏
        MainBoxLayout:
            orientation: 'horizontal'
            height: dp(30)
            size_hint_y: None
            # 菜单按钮
            IconButton:
                id: menu_button
            # 标题
            BaseLabel:
                text: '皮肤列表'
                text_size: self.size
                valign: 'middle'
                color: root.font_color
            IconButton:
                id: setting_button
        # 内容布局
        PartBoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)
            # 状态栏
            MainBoxLayout:
                width: dp(160)
                size_hint_x: None
            # 皮肤列表布局
            MainBoxLayout:
                MainScrollView:
                    MainGridLayout:
                        id: skin_grid_layout
                        cols: 2
                        padding: dp(8)
                        spacing: dp(8)
                        size_hint: 1, None
                        height: self.minimum_height


# 单个角色显示布局
<SkinItemLayout>:
    size_hint: None, None
    size: dp(140), dp(220)
    orientation: 'vertical'
    MainBoxLayout:
        id: box_layout
        Image:
            source: root.image_source
            pos: box_layout.x+dp(1), box_layout.y+dp(1)
            size: box_layout.width-dp(2), box_layout.height-dp(2)
    BottomLineLabel:
        id: role_label
        size_hint: 1,None
        height: dp(25)

# 皮肤设置模窗
<SkinSettingModalView>
    size_hint: self.size_hint
    overlay_color: self.overlay_color
    BorderBoxLayout:
        MainScrollView:
            MainBoxLayout:
                size_hint: 1,None
                orientation: 'vertical'
                spacing: dp(8)
                padding: dp(8)
                height: self.minimum_height
                LineBoxLayout:
                    MainBoxLayout:
                        orientation: 'horizontal'
                        size_hint: 1, None
                        height: dp(30)
                        pos_hint: {'top': 1}
                        IconLabel:
                            id: skin_folder_icon_label
                        ClickLabel:
                            id: skin_folder_label
                            text_size: self.size
                            valign: 'middle'
                        RightIconLabel:
                            id: skin_tip_label
                            text: "设置皮肤列表路径"
                            width: dp(170)