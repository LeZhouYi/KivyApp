# 皮肤管理页面布局
<SkinManageLayout>:
    PartBoxLayout:
        orientation: 'vertical'
        padding: dp(5)
        spacing: dp(5)
        # 标题栏
        MainBoxLayout:
            orientation: 'horizontal'
            height: dp(30)
            size_hint_y: None
            # 菜单按钮
            ClickIconLabel:
                id: menu_button
                size_hint_x: None
                width: dp(30)
            # 标题
            ColorLabel:
                text: '皮肤列表'
                text_size: self.size
                valign: 'middle'
                color: self.font_color
            ClickIconLabel:
                id: setting_button
        # 内容布局
        PartBoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)
            # 皮肤列表布局
            MainBoxLayout:
                id: skin_screen_manager